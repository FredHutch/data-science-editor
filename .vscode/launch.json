    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "jacdac cli serial",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/jacdac-ts/dist/jacdac-cli.js",
            "args": ["--serial=true", "-p"],
            "outFiles": [
                "${workspaceFolder}/jacdac-ts/dist/*.js"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "jacdac cli usb",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/jacdac-ts/dist/jacdac-cli.js",
            "args": ["--usb=true", "-p"],
            "outFiles": [
                "${workspaceFolder}/jacdac-ts/dist/*.js"
            ]
        }
    ]
}